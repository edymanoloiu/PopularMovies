<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_season_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softed.android.popularmovies.SeasonDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/season_details_poster"
                android:layout_width="150dp"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/season_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="48dp"
                android:layout_toEndOf="@+id/season_details_poster"
                android:layout_toRightOf="@+id/season_details_poster"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/season_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/season_details_poster"
                android:layout_marginTop="10dp"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/episodes_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/season_overview"
                android:layout_marginTop="20dp"></ListView>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
