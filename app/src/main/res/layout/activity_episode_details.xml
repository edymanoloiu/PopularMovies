<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_episode_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softed.android.popularmovies.EpisodeDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/episode_details_poster"
                android:layout_width="150dp"
                android:layout_height="250dp" />

            <TextView
                android:id="@+id/episode_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="83dp"
                android:layout_toEndOf="@+id/episode_details_poster"
                android:layout_toRightOf="@+id/episode_details_poster" />

            <TextView
                android:id="@+id/episode_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/episode_details_poster"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/episode_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/user_ratings"
                android:layout_below="@+id/episode_release_date"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/episode_release_date"
                android:layout_alignStart="@+id/episode_release_date" />


        </RelativeLayout>
    </ScrollView>

</LinearLayout>
